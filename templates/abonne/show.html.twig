{% extends 'base.html.twig' %}

{% block title %}Abonne{% endblock %}

{% block body %}
    <h1>Abonne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonne.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ abonne.pseudo }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ abonne.roles ? abonne.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ abonne.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ abonne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ abonne.prenom }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table">
        <thead>
        <tr>
            <th colspan=3>Livres empruntés</th>
        </tr>
        <tr>
            <th>Titre - Auteur</th>
            <th>Emprunté le</th>
            <th>Rendu le</th>
        </tr>
        </thead>

        <tbody>
            {% for emprunt in abonne.emprunts %}
                <tr>
                    <td>{{ emprunt.livre.titre ~ " - " ~ emprunt.livre.auteur|upper }}</td>
                    <td>{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('d-m-Y') : '' }}</td>
                    <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('d-m-Y') : ''}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('abonne_index') }}">Retour à la liste</a>

    <a href="{{ path('abonne_edit', {'id': abonne.id}) }}">Modifier</a>

    {{ include('abonne/_delete_form.html.twig') }}
{% endblock %}
